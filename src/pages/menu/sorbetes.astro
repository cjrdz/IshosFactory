---
import MenuLayout from "../../layouts/MenuLayout.astro";
import ProductGrid from "../../components/astro/ProductGrid.astro";
import CategoryTabs from "../../components/astro/CategoryTabs.astro";
import type { Product } from "../../types/menu";
import configData from "../../content/config.json";
import sorbetesData from "../../content/menu/sorbetes.json";

const products: Product[] = sorbetesData.filter(
    (p) => p.available,
) as Product[];
---

<MenuLayout title={`Sorbetes - ${configData.store.name}`}>
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4">Sorbetes</h1>
        <p class="text-lg text-base-content/70">
            Sorbetes refrescantes y naturales
        </p>
    </div>

    <CategoryTabs currentCategory="sorbetes" />

    <ProductGrid
        products={products}
        currencySymbol={configData.settings.currencySymbol}
    />
</MenuLayout>
