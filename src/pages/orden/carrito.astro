---
import OrderLayout from "../../layouts/OrderLayout.astro";
import CartPage from "../../components/svelte/CartPage.svelte";
import Toast from "../../components/svelte/Toast.svelte";
import configData from "../../content/config.json";
---

<OrderLayout title={`Carrito - ${configData.store.name}`}>
    <div class="mb-8">
        <h1 class="text-4xl font-bold mb-4">Mi Carrito</h1>
    </div>

    <CartPage
        currencySymbol={configData.settings.currencySymbol}
        taxRate={configData.settings.taxRate}
        client:load
    />

    <Toast client:load />
</OrderLayout>
