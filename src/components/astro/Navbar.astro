---
import "../../styles/global.css";
import "../../styles/component.css";
import ThemeToggle from "../svelte/ThemeToggle.svelte";

const currentPath = Astro.url.pathname;

const navLabels: Record<string, string> = {
    home: "Inicio",
    blog: "Menu",
    about: "Contactos",
};

interface NavLink {
    href: string;
    label: string;
    key: string;
}

const navLinks: NavLink[] = [
    { href: "/", label: navLabels.home, key: "home" },
    { href: "/blog", label: navLabels.blog, key: "blog" },
    { href: "/about", label: navLabels.about, key: "about" },
];
---

<header
    id="navbar"
    class="navbar bg-base-100/80 backdrop-blur-sm border-b border-base-300 sticky top-0 z-50 shadow-sm transition-all duration-300"
>
    <div class="navbar-start">
        <a
            href="/"
            class="btn btn-ghost normal-case text-xl font-bold group"
            aria-label={navLabels.home}
        >
            <img
                src="/images/icon.png"
                alt="Home"
                width="42"
                height="42"
                class="group-hover:scale-110 transition-transform duration-200"
            />
        </a>
    </div>

    <div class="navbar-center flex">
        <ul class="menu menu-horizontal px-1">
            {
                navLinks.map((link) => (
                    <li>
                        <a
                            href={link.href}
                            class={`text-lg ${currentPath === link.href ? "text-primary font-semibold" : ""}`}
                        >
                            {link.label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>

    <div class="navbar-end flex items-center gap-2">
        <ThemeToggle client:load />
    </div>
</header>
